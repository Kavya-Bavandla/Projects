package RD_Learning;

import java.util.HashMap;

public class FirstRepeatingCharINAString {

	public static void main(String[] args) {
		
		
		String s ="programmming";
		
		HashMap <Character, Integer> charPositions = new HashMap<>();
		
		
		char firstrepeating = '\0';
		
		for(int i=0; i<s.length();i++)
		{
			char currentchar= s.charAt(i);
			
			if(charPositions.containsKey(currentchar))
			{
				firstrepeating=currentchar;
				break;
			} else {
				charPositions.put(currentchar, i);
			}
		}
		System.out.println(map);

	}

}
