package Day29;

import java.time.Duration;

import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import io.github.bonigarcia.wdm.WebDriverManager;


//1 . we can handle alert by using Explict wait without using SwitchTo()
public class AlertHandlingwithoutusingSwitch {

	public static void main(String[] args) {
		WebDriverManager.chromedriver().setup();
		WebDriver driver = new ChromeDriver();
		WebDriverWait mywait = new WebDriverWait(driver,Duration.ofSeconds(5)); //Declaration of Explicit Wait
		
		driver.get("https://the-internet.herokuapp.com/javascript_alerts");
		driver.manage().window().maximize();
		driver.findElement(By.xpath("//button[@onclick = 'jsAlert()']"));
		
		
		Alert myalert = mywait.until(ExpectedConditions.alertIsPresent()); //catch alert
		System.out.println(myalert.getText());
		myalert.accept();
		
		

	}

}
